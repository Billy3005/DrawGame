     <div class="signin">
            <div class="content">
                <h2>Vẽ Hình Đoán Chữ</h2>
                <div class="form">
                   <form class="login-form" action="/player" method="GET">
                        <input id="playerName" class="input-name" type="text" placeholder="Enter your name here" autocomplete="off" required>
                        <button id="play-button" type="button">Play Now!</button>
                    </form>
                </div>
            </div>
    </div>
</section>
<script>
document.addEventListener('DOMContentLoaded', function () {
    const btn = document.getElementById('play-button');
    const input = document.getElementById('playerName');

    function startGame() {
        const name = input.value.trim();
        if (!name) {
            alert('Please enter your name!');
            return;
        }
        // Lưu tên player vào localStorage
        localStorage.setItem('playerName', name);
        window.location.href = '/player?playerName=' + encodeURIComponent(name);
    }

    // Sự kiện click
    btn.addEventListener('click', function (e) {
        e.preventDefault(); // Ngăn submit form mặc định
        startGame();
    });

    // Sự kiện Enter trong input
    input.addEventListener('keydown', function (event) {
        if (event.key === 'Enter') {
            event.preventDefault(); // Ngăn form submit mặc định
            startGame();
        }
    });
});
</script>



